# Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Application
# ============================================
APP_ENV=development
DEBUG=true
APP_NAME=Fleet Vehicle Data Gateway

# Backend Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/fleet_gateway

# ============================================
# Authentication
# ============================================
# IMPORTANT: Generate a strong secret for production!
# Run: openssl rand -hex 32
SECRET_KEY=change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth - Google (Optional)
# Get credentials: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth - GitHub (Optional)
# Get credentials: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# OAuth Redirect URL (change for production)
OAUTH_REDIRECT_URL=http://localhost:8000/auth/callback

# ============================================
# CORS & Security
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Kafka/Redpanda
# ============================================
KAFKA_ENABLED=false
KAFKA_BOOTSTRAP_SERVERS=localhost:19092
KAFKA_TOPIC_TELEMETRY=fleet-telemetry
KAFKA_CONSUMER_GROUP=fleet-backend

# ============================================
# GCP (Optional - for cloud features)
# ============================================
# GCP_PROJECT_ID=your-project-id
# GCP_CREDENTIALS_PATH=./service-account-key.json
# GCS_BUCKET_NAME=fleet-telemetry-data
# BIGQUERY_DATASET=fleet_analytics
# BIGQUERY_TABLE=telemetry

# ============================================
# Simulator
# ============================================
SIMULATOR_VEHICLE_COUNT=50
SIMULATOR_UPDATE_INTERVAL_MS=1000
SIMULATOR_DEMO_MODE=true

# ============================================
# Frontend
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws/telemetry
